{
    "containerDefinitions": [
        {
            "name": "application",
            "cpu": 154,
            "memory": 256,
            "memoryReservation": 256,
            "portMappings": [],
            "essential": true,
            "environment": [],
            "environmentFiles": [],
            "mountPoints": [
                {
                    "sourceVolume": "caddy_configuration",
                    "containerPath": "/etc/caddy",
                    "readOnly": true
                },
                {
                    "sourceVolume": "database",
                    "containerPath": "/app/db.sqlite",
                    "readOnly": false
                }
            ],
            "volumesFrom": [],
            "hostname": "app",
            "ulimits": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "/ecs/blog",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "ecs"
                },
                "secretOptions": []
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:8080 || exit 1"
                ],
                "interval": 30,
                "timeout": 10,
                "retries": 3,
                "startPeriod": 30
            }
        },
        {
            "name": "caddy",
            "image": "caddy:2.8.4-alpine",
            "cpu": 102,
            "memory": 256,
            "memoryReservation": 256,
            "links": [
                "application:app"
            ],
            "portMappings": [
                {
                    "name": "http",
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp",
                    "appProtocol": "http"
                },
                {
                    "name": "https",
                    "containerPort": 443,
                    "hostPort": 443,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "APPLICATION_PORT",
                    "value": "8080"
                },
                {
                    "name": "HTTP_PORT",
                    "value": "80"
                },
                {
                    "name": "APPLICATION_HOST",
                    "value": "app"
                },
                {
                    "name": "DOMAIN",
                    "value": "helderserv.io"
                },
                {
                    "name": "PROXY_PORT",
                    "value": "443"
                }
            ],
            "environmentFiles": [],
            "mountPoints": [
                {
                    "sourceVolume": "caddy_data",
                    "containerPath": "/data",
                    "readOnly": false
                }
            ],
            "volumesFrom": [
                {
                    "sourceContainer": "application",
                    "readOnly": true
                }
            ],
            "hostname": "caddy"
        }
    ],
    "family": "blog",
    "executionRoleArn": "arn:aws:iam::381491915394:role/ecsTaskExecutionRole",
    "networkMode": "bridge",
    "volumes": [
        {
            "name": "database",
            "host": {
                "sourcePath": "/home/ec2-user/db.sqlite"
            }
        },
        {
            "name": "caddy_data",
            "dockerVolumeConfiguration": {
				"autoprovision": true,
                "scope": "shared",
                "driver": "local"
            }
        },
        {
            "name": "caddy_configuration",
            "dockerVolumeConfiguration": {
                "scope": "task",
                "driver": "local"
            }
        }
    ],
    "placementConstraints": [],
    "compatibilities": [
        "EC2"
    ],
    "requiresCompatibilities": [
        "EC2"
    ],
    "cpu": "256",
    "memory": "512",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    },
    "tags": []
}

